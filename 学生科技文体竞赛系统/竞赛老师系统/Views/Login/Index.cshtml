
@{
    /**/

    ViewBag.Title = "Index";
    Layout = null;
}

<!doctype html>


<html lang="zh">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <title>竞赛赛系统登陆</title>

    <link rel="stylesheet" type="text/css" href="~/Content/css/styles.css">
    <style type="text/css">
        body, td, th {
            font-family: "Source Sans Pro", sans-serif;
        }

        body {
            background-color: #2B2B2B;
        }
    </style>
</head>
<body>


    <div class="wrapper">

        <div class="container">
            <h1>Welcome</h1>
            <form class="form">
                <input type="text" id="username" placeholder="账号" name="username">
                <input type="password" id="password" placeholder="密码" name="password">
                <button type="button" id="login-button">登陆</button>
            </form>
            <p align="center" id="my_error"></p>
        </div>

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>

    </div>

    <script type="text/javascript" src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script type="text/javascript">
        $('#login-button').click(function () {
            if ($("#username").val() == "") {
                $("#my_error").text("请输入账号");
                return false;
            }

            if ($("#password").val() == "") {
                $("#my_error").text("请输入密码");
                return false;
            }
            $.ajax({
                url: "/Login/CheckPower",
                type: "post",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify({
                    "username_v": $("#username").val(),
                    "password_v": $("#password").val()
                }),
                success: function (data) {
                    if (data==1) {
                        event.preventDefault();
                        $('form').fadeOut(500);
                        $('.wrapper').addClass('form-success');
                        window.location.replace("/Examination/Index/Index");
                       
                    }
                    else if (data == 0) {
                        event.preventDefault();
                        $('form').fadeOut(500);
                        $('.wrapper').addClass('form-success');
                        window.location.replace("/Login/Register");
                    }
                    else {
                        $("#my_error").text("密码错误或账号不存在");
                    }

                }
            });



        });
    </script>



</body>
</html>

